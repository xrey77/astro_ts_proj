            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact Us</a>
          </li>
        </ul>

        { getUsername["username"] === "" ? (
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#staticLogin">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#staticRegister">Register</a>
          </li>
        </ul>
        ) : (

          <ul class="nav">  
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="/#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <img class="user" src={getUserpic().userpic} alt=""/>&nbsp;{getUsername().username}
            </a>
            <ul class="dropdown-menu">
              <li data-bs-dismiss="offcanvas">
                <a onclick="logout();" class="dropdown-item" href="/#">Logout</a></li>
              <li data-bs-dismiss="offcanvas">
                <a class="dropdown-item" href="/profile">Profile</a></li>
